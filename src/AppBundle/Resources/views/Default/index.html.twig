{% extends "::base.html.twig" %}

{% block title %}Calendars{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Calendars</h3>
                </div>
                <div class="box-body">
                    <div class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                        <tr class="bg-success" role="row">
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Owner(s)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for calendar in calendars %}
                                        <tr role="row" class="odd">
                                            <td>
                                                <a href="{{ path('show_calendar', {'id': calendar.id}) }}">{{ calendar.name }}</a>
                                            </td>
                                            <td>
                                                {{ calendar.description }}
                                            </td>
                                            <td>
                                                {{ calendar.user.name }}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/links.css') }}">
{% endblock %}