                        {#</form>#}
                    {#</div>#}

                    {% if app.user %}
                    <!-- Navbar Right Menu -->
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            <!-- User Account Menu -->
                            <li class="dropdown user user-menu">
                                <!-- Menu Toggle Button -->
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <!-- The user image in the navbar-->
                                    <img src="../../dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
                                    <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                    <span class="hidden-xs">Alexander Pierce</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <!-- The user image in the menu -->
                                    <li class="user-header">
                                        <img src="../../dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">

                                        <p>
                                            Alexander Pierce - Web Developer
                                            <small>Member since Nov. 2012</small>
                                        </p>
                                    </li>
                                    <!-- Menu Body -->
                                    <li class="user-body">
                                        <div class="row">
                                            <div class="col-xs-4 text-center">
                                                <a href="#">Followers</a>
                                            </div>
                                            <div class="col-xs-4 text-center">
                                                <a href="#">Sales</a>
                                            </div>
                                            <div class="col-xs-4 text-center">
                                                <a href="#">Friends</a>
                                            </div>
                                        </div>
                                        <!-- /.row -->
                                    </li>
                                    <!-- Menu Footer-->
                                    <li class="user-footer">
                                        <div class="pull-left">
                                            <a href="{{ path('working_hours_list') }}" class="btn btn-default btn-flat"> My Working Hours </a>
                                        </div>
                                        <div class="pull-right">
                                            <a href="{{ path('logout') }}" class="btn btn-default btn-flat"> Logout </a>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <ul>
                        {% if app.user.calendar is null %}
                            <li>
                                <td>
                                    <a class="btn btn-primary" href="{{ path('calendar_create') }}"> Create Calendar</a>
                                </td>
                            </li>
                        {% else %}
                            <li>
                                <a class="btn btn-warning" href="{{ path('calendar_edit') }}"> Edit Calendar </a>
                            </li>
                            <li>
                                <a class="btn btn-info" href="{{ path('calendar_show') }}"> Show Calendar </a>
                            </li>
                        {% endif %}
                    </ul>
                    <!-- /.navbar-custom-menu -->
                    {% else %}
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="{{ path('login') }}"> Login </a>
                            </li>
                            <li>
                                <a href="{{ path('user_registration') }}"> Register </a>
                            </li>
                        </ul>
                    </div>
                    {% endif %}
                </div>
                <!-- /.container-fluid -->
            </nav>
